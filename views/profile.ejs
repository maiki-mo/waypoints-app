<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Waypoints</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" media="screen" href="/styles.css" />
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet" />

</head>
<body>
  <header>
  <h1 class="title"><img id="login-logo" src="/images/logo.png"><span id="title">Waypoints<span></h1>
  <nav>
    <ul>
    <a href="/profile"><li class="nav-li">Profile</li></a>
    <a href="/create"><li class="nav-li">Create WP</li></a>
    <a href="/auth/logout"><li class="nav-li">Logout</li></a>
    </ul>
  </nav>
  </header> 
  <div id="homepage">
    <h3>User Information:</h3>
      <h4>Username: <%= user.username %></h4>
    <h3>Saved Routes:</h3>
    <br />
    <br />
      <% user.routes.forEach((route, index) => {%>
      <a href="./../waypoints/<%=index%>"><h4 style="display: inline">Waypoint Group <%=index + 1%>:</h4></a>
      <% route.waypoints.forEach((waypoint, index) => { %>
      <p style="display: inline;"><%=waypoint.name%> | </p>
      <% }) %>
      <br />
      <% }) %>
    </div>
  </div>
</body>
</html>